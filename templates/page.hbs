{{! make the _globals object in course.json available to this template}}
{{import_globals}}
<div class="page__inner">
  {{#any displayTitle subtitle body instruction}}
    <div class="page__header">
      <div class="page__header-inner">
        <div class="page__header__text">
          <div class="page__header__text-inner">
            <div class="page__header__course-title">
              <!-- {{courseTitle}} -->
            </div>
            {{#if displayTitle}}
              <div class="page__title {{#if _audio.mp3}}has-audio{{/if}}">

                {{#unless _disableAccessibilityState}}
                  <div class="js-heading"></div>
                {{/unless}}

                <div class="page__title-inner" {{#unless _disableAccessibilityState}} aria-hidden="true" {{/unless}}>
                  {{{compile displayTitle}}}
                </div>
                {{#if _audio.audioSet}}
                  {{> audio-controls this}}
                {{/if}}
              </div>
            {{/if}}

            {{#if subtitle}}
              <div class="page__subtitle">
                <div class="page__subtitle-inner">
                  {{{compile subtitle}}}
                </div>
              </div>
            {{/if}}

            {{#any body pageBody}}
              <div class="page__body">
                <div class="page__body-inner">
                  {{#if pageBody}}
                    {{{compile pageBody}}}
                  {{else}}
                    {{{compile body}}}
                  {{/if}}
                </div>
              </div>
            {{/any}}

            {{#if instruction}}
              <div class="page__instruction">
                <div class="page__instruction-inner">
                  {{{compile instruction}}}
                </div>
              </div>
            {{/if}}
          </div>
        </div>
        <div class="page__header__graphic">
          <div class="page__header__graphic-inner">
            {{#if _meLearning21._pageHeader._graphic._src}}
              <img src="{{_meLearning21._pageHeader._graphic._src}}" aria-label="{{_meLearning21._pageHeader._graphic._alt}}" />
            {{else}}
              <img src="{{_graphic.src}}" aria-label="{{_graphic.alt}}" />
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/any}}

  <div class="article__container">
    {{!-- Articles render here --}}
  </div>

</div>
