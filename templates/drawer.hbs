<div class="drawer__inner">
  <span id="drawer-heading" class="aria-label">{{_globals._accessibility._ariaLabels.drawer}}</span>

  <div class="drawer__toolbar u-clearfix">

    <div class="drawer__close">
      <button class="btn-icon drawer__btn drawer__close-btn js-drawer-close-btn" aria-label="{{_globals._accessibility._ariaLabels.closeDrawer}}">
        <div class="icon-label">Close menu</div>
        <div class="icon"></div>
      </button>
    </div>

    <div class="drawer__exit">
      <button class="btn-icon drawer__btn drawer__back-btn js-drawer-exit-btn" aria-label="{{_globals.closeButton}}">
        <div class="icon-label">Exit course</div>
        <div class="icon"></div>
      </button>
    </div>

  </div>

  <div class="drawer__tabs">
    <button class="drawer__tab drawer__tab-navigation is-selected">
      Navigation
    </button>
    {{#if _globals._extensions._resources}}
      <button class="drawer__tab drawer__tab-resources">
        Resources
      </button>
    {{/if}}
    {{#if _globals._extensions._glossary}}
      <button class="drawer__tab drawer__tab-glossary">
        Glossary
      </button>
    {{/if}}
  </div>

  <div class="drawer__holder js-drawer-holder"></div>

  {{{a11y_wrap_focus}}}

</div>
